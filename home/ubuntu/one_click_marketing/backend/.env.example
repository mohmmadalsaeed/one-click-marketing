# Backend Environment Variables (.env.example)
# Rename this file to .env in your local development if needed,
# but for Cloud Run, these variables should be set directly in the service configuration.

# Flask App Configuration
SECRET_KEY="YOUR_FLASK_SECRET_KEY_HERE" # Replace with a strong random string

# JWT Configuration
JWT_SECRET_KEY="YOUR_JWT_SECRET_KEY_HERE" # Replace with a strong random string

# Database Configuration (Example for MySQL on Cloud SQL or other provider)
# Ensure your main.py is configured to read these for SQLAlchemy
DB_USERNAME="YOUR_DB_USERNAME"
DB_PASSWORD="YOUR_DB_PASSWORD"
DB_HOST="YOUR_DB_HOST_IP_OR_CLOUDSQL_CONNECTION_NAME"
DB_PORT="3306" # Or your MySQL port
DB_NAME="YOUR_DB_NAME"

# Meta WhatsApp API Credentials
META_APP_ID="YOUR_META_APP_ID"
META_APP_SECRET="YOUR_META_APP_SECRET"
META_VERIFY_TOKEN="YOUR_META_VERIFY_TOKEN_FOR_WEBHOOKS" # A random string you create
WHATSAPP_BUSINESS_ACCOUNT_ID="YOUR_WHATSAPP_BUSINESS_ACCOUNT_ID"
WHATSAPP_PHONE_NUMBER_ID="YOUR_WHATSAPP_PHONE_NUMBER_ID"

# Frontend URL (where your Next.js app will be hosted)
# This might be needed for CORS or other configurations
FRONTEND_URL="URL_OF_YOUR_DEPLOYED_FRONTEND_SERVICE" # e.g., https://frontend-xxxxx-uc.a.run.app

# Default Admin User (Optional - if your app creates a default admin on startup)
# DEFAULT_ADMIN_EMAIL="admin@example.com"
# DEFAULT_ADMIN_PASSWORD="yoursecurepassword"

